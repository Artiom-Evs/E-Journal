@page
@model CreateScoreModel
@{
    ViewData["title"] = "Выставление новой оценки";
}

<h1>@ViewData["title"]</h1>

<form method="post" 
    asp-route-returnUrl="@Model.ReturnUrl"
    asp-route-lessonId="@Model.LessonId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-floating">
        <select asp-for="Input.StudentId" class="form-control">
            <option></option>
            @foreach (var s in Model.Students)
            {
                <option value="@s.Id">@s.GetInitials()</option>
            }
        </select>
        <label asp-for="Input.StudentId" class="form-label"></label>
        <span asp-validation-for="Input.StudentId" class="text-danger"></span>
    </div>
    
    <div class="form-floating">
        <select asp-for="Input.ScoreValue" class="form-control">
            <option></option>
            @foreach (var g in Model.ScoreValues)
            {
                <option value="@g">@g</option>
            }
        </select>
        <label asp-for="Input.ScoreValue" class="form-label"></label>
        <span asp-validation-for="Input.ScoreValue" class="text-danger"></span>
    </div>
    
    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Сохранить</button>
</form>